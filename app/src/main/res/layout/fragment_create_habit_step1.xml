<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.habit.CreateHabitStep1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrain"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <com.andysapps.superdo.todo.views.GradientTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Create a habit"
                android:textSize="28sp"
                android:textColor="@color/lightRed"
                android:layout_marginStart="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/ib_close_buckets"
                style="@style/ripple_background"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:padding="2dp"
                android:visibility="visible"
                android:src="@drawable/ic_close"
                android:layout_marginEnd="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:visibility="visible"
            android:id="@+id/ch_et_habit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="26sp"
            android:hint="Habit Name"
            android:ellipsize="end"
            android:minLines="1"
            android:maxLines="1"
            android:inputType="textCapSentences"
            android:scrollHorizontally="true"
            android:imeOptions="actionDone"
            android:textColorHint="@color/grey1"
            android:background="@null"
            android:textColor="@color/lightRed"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggestions :"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/grey2"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ch_rv_suggestions"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/lightRed"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/ch_btn_health"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_ch_health"
                    android:scaleType="center"
                    android:background="@drawable/bg_capsul_lightred"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fitness / Health"
                    android:textSize="10sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey4"
                    android:layout_marginTop="8dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ch_btn_productivity"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_ch_productivity_money"
                    android:scaleType="center"
                    android:background="@drawable/bg_capsul_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Productivity / Money"
                    android:textSize="10sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey4"
                    android:layout_marginTop="8dp"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ch_btn_family"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_ch_family"
                    android:scaleType="center"
                    android:background="@drawable/bg_capsul_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Relationship"
                    android:textSize="10sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey4"
                    android:layout_marginTop="8dp"/>


            </LinearLayout>

        </LinearLayout>

        <!-- ROW 2 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/ch_btn_digital_well"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_ch_smartphone"
                    android:scaleType="center"
                    android:background="@drawable/bg_capsul_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Digital Wellbeing"
                    android:textSize="10sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey4"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ch_btn_mindfullness"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_ch_mindfullness"
                    android:scaleType="center"
                    android:background="@drawable/bg_capsul_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mindfulness"
                    android:textSize="10sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey4"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ch_btn_addiction"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_ch_addiction"
                    android:scaleType="center"
                    android:background="@drawable/bg_capsul_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Relationship"
                    android:textSize="10sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey4"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create this habit"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/grey4"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destroy this habit"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/grey4"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>