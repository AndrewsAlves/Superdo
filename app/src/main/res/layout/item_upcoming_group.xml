<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp">

    <TextView
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        android:id="@+id/tv_upcoming_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24th June"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/lightRed"
        android:ellipsize="end"
        android:minLines="1"
        android:maxLines="1"
        android:inputType="text"
        android:scrollHorizontally="true"
        android:imeOptions="actionDone"/>

    <ImageButton
        android:visibility="gone"
        android:id="@+id/ib_deletesubTask"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/ic_arrow_down_red" />

    <LinearLayout
        android:id="@+id/ll_parent_upcomingtask"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_check_task"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:visibility="visible"
                android:layout_marginStart="6dp"
                android:src="@drawable/img_oval_thin_grey3"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_check_view"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                app:lottie_fileName="anim_check2.json"
                app:lottie_autoPlay="false" />

            <ImageButton
                android:id="@+id/btn_click_task_completed"
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:background="@color/transparent"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <lib.mozidev.me.extextview.ExTextView
                    android:id="@+id/tv_tasks_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="This is a task"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/grey3"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/tv_upcoming_task_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="11sp"
                    android:textColor="@color/grey2"/>

            </LinearLayout>


            <LinearLayout
                android:visibility="visible"
                android:id="@+id/parent_ll_task_icons"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mini_repeat"
                    android:scaleType="center"
                    android:layout_marginEnd="15dp"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mini_deadline"
                    android:scaleType="center"
                    android:layout_marginEnd="15dp"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_subtasks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mini_subtasks"
                    android:scaleType="center"
                    android:layout_marginEnd="15dp"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_remind"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mini_remind"
                    android:scaleType="center"
                    android:layout_marginEnd="15dp"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mini_focus"
                    android:scaleType="center"
                    android:layout_marginEnd="15dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>