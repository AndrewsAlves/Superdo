<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_check_task"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:visibility="visible"
                android:layout_marginStart="6dp"
                android:src="@drawable/img_oval_thin_grey3"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_check_view"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                app:lottie_fileName="anim_check2.json"
                app:lottie_autoPlay="false" />

            <ImageButton
                android:id="@+id/btn_click_task_completed"
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:background="@color/transparent"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <lib.mozidev.me.extextview.ExTextView
                    android:id="@+id/tv_tasks_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="This is a task"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/cb_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/parent_ll_task_icons"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_dodate_mini"
                    android:scaleType="center"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/tv_task_dodate"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Wednesday"
                    android:textSize="11sp"
                    android:layout_marginEnd="15dp"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mini_deadline"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="15dp"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mini_repeat"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="15dp"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_remind"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mini_remind"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="15dp"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_subtasks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mini_subtasks"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="15dp"/>


                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mini_focus"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="15dp"/>

            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>



</LinearLayout>