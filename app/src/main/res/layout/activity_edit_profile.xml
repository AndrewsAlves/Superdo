<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white1"
    tools:context=".activity.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_close_editprofile"
                style="@style/ripple_background"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="center"
                android:visibility="visible"
                android:src="@drawable/ic_back_red"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <com.andysapps.superdo.todo.views.GradientTextView
                android:id="@+id/signup_tv_superdo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:layout_toRightOf="@id/ib_close_editprofile"
                android:layout_marginStart="20dp"
                android:text="Edit profile"
                android:layout_centerVertical="true"
                android:textColor="@color/lightRed"
                android:textSize="18sp" />

            <ImageButton
                android:visibility="visible"
                android:id="@+id/ib_save_profileinfo"
                style="@style/ripple_background"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="center"
                android:src="@drawable/ic_tick_red"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_round_rect_button_white">

            <EditText
                android:id="@+id/et_firstname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:hint="First name"
                android:textColor="@color/black"
                android:textColorHint="@color/grey1"
                android:textSize="14sp" />

        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_round_rect_button_white">

            <EditText
                android:id="@+id/et_lastname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Last name"
                android:textColor="@color/black"
                android:textColorHint="@color/grey1"
                android:textSize="14sp" />

        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/btn_iv_avatar1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_avatar"
                android:src="@drawable/img_avatar_1"/>

            <ImageView
                android:id="@+id/btn_iv_avatar2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/img_avatar_2"/>

            <ImageView
                android:id="@+id/btn_iv_avatar3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/img_avatar_3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/btn_iv_avatar4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_avatar_4"/>

            <ImageView
                android:id="@+id/btn_iv_avatar5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/img_avatar_5"/>

            <ImageView
                android:id="@+id/btn_iv_avatar6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/img_avatar_6"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>