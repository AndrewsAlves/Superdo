<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".dialog.sidekicks.DeadlineDialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline on"
        android:layout_margin="20dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_grey_low"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/dlg_deadline_iv_date"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_do_date_off"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/dlg_deadline_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/grey3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_grey_low"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/dlg_deadline_iv_time"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_time_off"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/dlg_deadline_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/grey3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical|right"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dlg_deadline_b_negative"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="Cancel"
            android:gravity="center"
            style="@style/ripple_background_bordered"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/lightRed" />

        <TextView
            android:id="@+id/dlg_deadline_b_positive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/ripple_background_bordered"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:layout_marginEnd="20dp"
            android:text="Set"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/lightRed" />

    </LinearLayout>


</LinearLayout>